html
  head
    title Search for a Book
    link(rel='stylesheet', href='/style.css')
    // BootStrap
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
  nav.navbar.navbar-inverse
    div.navbar-header
      a(href='/').navbar-brand Book Store
      ul.nav.navbar-nav.navbar-right
        li: a(href='/allbooks') Browse Books
        li: a(href='/checkorders:false') Check Orders
      ul.nav.navbar-nav.navbar-left
        li: a(href='/logout') Logout
  body(style='background-color: #F4F2F1')
    -if(newinsert=="true")
      .alert.alert-success
        strong Success!
        |  Your order has been placed.
    h3.col-xs-6 You have made the following orders:
    - var n = 0
    table.table.table-striped
      tr
        th ISBN
        th Amount
        th Order Date
        th Order Status
        th Order ID
      -for(var i = 0; i<JSON.parse(data).length; i++) // Populate entire table with all book data from query
        tr
          td
            a(href='/bookpage:'+JSON.parse(data)[i]["ISBN"])
                h4=JSON.parse(data)[i]["ISBN"]
          td
            h4=JSON.parse(data)[i]["Amount"]
          td
            h4=JSON.parse(data)[i]["Order_Date"]
          td 
            h4=JSON.parse(data)[i]["Order_Status"]
          td 
            h4=JSON.parse(data)[i]["Order_ID"]